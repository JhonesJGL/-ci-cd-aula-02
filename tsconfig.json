{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018"],
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "types": ["jest"]
  },
  "include": ["src/**/*", "__tests__/*", "**/*.test.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
